<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/app_background_color"
    tools:context=".presentation.LoginActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="8dp"
          android:gravity="center"
          >

          <ImageView
              android:id="@+id/iv_logo_login"
              android:layout_width="match_parent"
              android:layout_height="296dp"
              android:layout_alignParentTop="true"
              android:layout_marginTop="-8dp"
              android:scaleType="fitCenter"
              android:src="@drawable/lacoro" />

          <EditText
              android:id="@+id/et_email_login"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignParentLeft="true"
              android:layout_alignParentRight="true"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/iv_logo_login"
              android:layout_marginBottom="8dp"
              android:layout_marginTop="16dp"
              android:ems="10"
              android:fontFamily="Arial"
              android:hint="@string/hint_email"
              android:inputType="textEmailAddress" />

          <EditText
              android:id="@+id/et_password_login"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignEnd="@+id/et_email_login"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_alignRight="@+id/et_email_login"
              android:layout_below="@+id/et_email_login"
              android:ems="10"
              android:fontFamily="Arial"
              android:hint="@string/hint_password"
              android:inputType="textPassword" />

          <Button
              android:id="@+id/btn_enter"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignEnd="@+id/et_password_login"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/et_password_login"
              android:layout_marginTop="8dp"
              android:fontFamily="Arial"
              android:text="@string/lb_sign_in"
              android:background="@color/bg_button"
              />


          <TextView
              android:id="@+id/tv_app_version"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/btn_enter"
              android:textStyle="bold"
              android:layout_alignParentEnd="true"
              android:text="@string/app_version"
              />
      </RelativeLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
